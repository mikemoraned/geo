samples:
    cargo run --release --bin sample -- --area data/edinburgh/area.toml --starts data/edinburgh/edinburgh_sample.10.starts.geojson --ends data/edinburgh/edinburgh_sample.10.ends.geojson --paths 10 --seed 1
    cargo run --release --bin sample -- --area data/edinburgh/area.toml --starts data/edinburgh/edinburgh_sample.100.starts.geojson --ends data/edinburgh/edinburgh_sample.100.ends.geojson --paths 100 --seed 1
    cargo run --release --bin sample -- --area data/edinburgh/area.toml --starts data/edinburgh/edinburgh_sample.1000.starts.geojson --ends data/edinburgh/edinburgh_sample.1000.ends.geojson --paths 1000 --seed 1

routes:
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.10.starts.geojson --ends data/edinburgh/edinburgh_sample.10.ends.geojson --geojson data/edinburgh/edinburgh_routes_auto.10.geojson --profile auto
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.10.starts.geojson --ends data/edinburgh/edinburgh_sample.10.ends.geojson --geojson data/edinburgh/edinburgh_routes_ped.10.geojson --profile pedestrian
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.100.starts.geojson --ends data/edinburgh/edinburgh_sample.100.ends.geojson --geojson data/edinburgh/edinburgh_routes_auto.100.geojson --profile auto
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.100.starts.geojson --ends data/edinburgh/edinburgh_sample.100.ends.geojson --geojson data/edinburgh/edinburgh_routes_ped.100.geojson --profile pedestrian
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.1000.starts.geojson --ends data/edinburgh/edinburgh_sample.1000.ends.geojson --geojson data/edinburgh/edinburgh_routes_auto.1000.geojson --profile auto
    cargo run --release --bin routes -- --starts data/edinburgh/edinburgh_sample.1000.starts.geojson --ends data/edinburgh/edinburgh_sample.1000.ends.geojson --geojson data/edinburgh/edinburgh_routes_ped.1000.geojson --profile pedestrian

regions:
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_auto.10.geojson --stage-template data/edinburgh/edinburgh_routes_auto.10.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_auto.10.geojson
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_auto.100.geojson --stage-template data/edinburgh/edinburgh_routes_auto.100.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_auto.100.geojson
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_auto.1000.geojson --stage-template data/edinburgh/edinburgh_routes_auto.1000.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_auto.1000.geojson
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_ped.10.geojson --stage-template data/edinburgh/edinburgh_routes_ped.10.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_ped.10.geojson
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_ped.100.geojson --stage-template data/edinburgh/edinburgh_routes_ped.100.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_ped.100.geojson
    cargo run --release --bin find_regions -- --routes data/edinburgh/edinburgh_routes_ped.1000.geojson --stage-template data/edinburgh/edinburgh_routes_ped.1000.STAGE_NAME.png --regions data/edinburgh/edinburgh_regions_ped.1000.geojson

layout:
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_auto.10.geojson --bin-type guillotine --layout data/edinburgh/edinburgh_layout_auto.10.guillotine.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_auto.10.geojson --bin-type max-rects --layout data/edinburgh/edinburgh_layout_auto.10.max-rects.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_auto.1000.geojson --bin-type guillotine --layout data/edinburgh/edinburgh_layout_auto.1000.guillotine.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_auto.1000.geojson --bin-type max-rects --layout data/edinburgh/edinburgh_layout_auto.1000.max-rects.png

    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_ped.10.geojson --bin-type guillotine --layout data/edinburgh/edinburgh_layout_ped.10.guillotine.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_ped.10.geojson --bin-type max-rects --layout data/edinburgh/edinburgh_layout_ped.10.max-rects.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_ped.1000.geojson --bin-type guillotine --layout data/edinburgh/edinburgh_layout_ped.1000.guillotine.png
    cargo run --release --bin layout -- --regions data/edinburgh/edinburgh_regions_ped.1000.geojson --bin-type max-rects --layout data/edinburgh/edinburgh_layout_ped.1000.max-rects.png

all: samples routes regions layout